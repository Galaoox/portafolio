---
// Header component with navigation and mobile menu
---

<header id="header" class="fixed top-0 left-0 right-0 z-40 bg-background/80 backdrop-blur-sm transition-shadow duration-300">
    <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
        <a href="#" class="text-2xl font-bold text-accent font-mono">EV</a>
        <div class="hidden md:flex items-center space-x-8">
            <a href="#hero" id="nav-hero" class="nav-link text-gray-300 hover:text-white transition">Inicio</a>
            <a href="#about" id="nav-about" class="nav-link text-gray-300 hover:text-white transition">Sobre mí</a>
            <a href="#experience" id="nav-experience" class="nav-link text-gray-300 hover:text-white transition">Experiencia</a>
            <a href="#skills" id="nav-skills" class="nav-link text-gray-300 hover:text-white transition">Habilidades</a>
            <a href="#contact" id="nav-contact" class="nav-link text-gray-300 hover:text-white transition">Contacto</a>
        </div>
        <a href="https://drive.google.com/file/d/1tq30qS_kZhwjL5BKE08oAJ8jn448Plho/view?usp=sharing" target="_blank" rel="noopener noreferrer" class="hidden md:inline-block bg-accent hover:bg-opacity-80 hover:shadow-lg hover:shadow-accent/25 text-white font-semibold px-5 py-2 rounded-lg transition-all duration-200">
            Descargar CV
        </a>
        <!-- Mobile Menu Button -->
        <button id="mobile-menu-button" class="md:hidden text-white focus:outline-none relative">
            <div class="w-6 h-6 flex flex-col justify-center items-center">
                <span class="hamburger-line w-6 h-0.5 bg-white rounded transition-all duration-300 transform origin-center"></span>
                <span class="hamburger-line w-6 h-0.5 bg-white rounded transition-all duration-300 transform origin-center mt-1"></span>
                <span class="hamburger-line w-6 h-0.5 bg-white rounded transition-all duration-300 transform origin-center mt-1"></span>
            </div>
        </button>
    </nav>
</header>

<!-- Mobile Menu -->
<div id="mobile-menu" class="hidden fixed inset-0 bg-background/95 z-50 md:hidden transition-all duration-300 ease-in-out opacity-0 scale-95">
    <div class="flex justify-end p-6">
        <button id="close-menu-button" class="text-white hover:text-accent transition-colors duration-200">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>
    <div class="flex flex-col items-center justify-center h-full space-y-8 text-2xl">
        <a href="#hero" class="mobile-nav-link text-gray-300 hover:text-white transition-all duration-200 transform hover:scale-105">Inicio</a>
        <a href="#about" class="mobile-nav-link text-gray-300 hover:text-white transition-all duration-200 transform hover:scale-105">Sobre mí</a>
        <a href="#experience" class="mobile-nav-link text-gray-300 hover:text-white transition-all duration-200 transform hover:scale-105">Experiencia</a>
        <a href="#skills" class="mobile-nav-link text-gray-300 hover:text-white transition-all duration-200 transform hover:scale-105">Habilidades</a>
        <a href="#contact" class="mobile-nav-link text-gray-300 hover:text-white transition-all duration-200 transform hover:scale-105">Contacto</a>
        <a href="https://drive.google.com/file/d/1tq30qS_kZhwjL5BKE08oAJ8jn448Plho/view?usp=sharing" target="_blank" rel="noopener noreferrer" class="mt-8 inline-block bg-accent hover:bg-opacity-80 hover:shadow-lg hover:shadow-accent/25 text-white font-semibold px-8 py-4 rounded-lg transition-all duration-200 transform hover:scale-105 hover:-translate-y-1">
            Descargar CV
        </a>
    </div>
</div>
