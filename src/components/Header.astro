---
// Header component with navigation and mobile menu
---

<header id="header" class="fixed top-0 left-0 right-0 z-40 bg-background/80 backdrop-blur-sm transition-shadow duration-300">
    <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
        <a href="#" class="text-2xl font-bold text-accent font-mono">EV</a>
        <div class="hidden md:flex items-center space-x-8">
            <a href="#about" class="text-secondary-text hover:text-primary-text transition">Sobre mí</a>
            <a href="#experience" class="text-secondary-text hover:text-primary-text transition">Experiencia</a>
            <a href="#skills" class="text-secondary-text hover:text-primary-text transition">Habilidades</a>
            <a href="#contact" class="text-secondary-text hover:text-primary-text transition">Contacto</a>
        </div>
        <a href="https://drive.google.com/file/d/1tq30qS_kZhwjL5BKE08oAJ8jn448Plho/view?usp=sharing" target="_blank" rel="noopener noreferrer" class="hidden md:inline-block bg-accent hover:bg-opacity-80 text-primary-text font-semibold px-5 py-2 rounded-lg transition">
            Descargar CV
        </a>
        <!-- Mobile Menu Button -->
        <button id="mobile-menu-button" class="md:hidden text-primary-text focus:outline-none">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
        </button>
    </nav>
</header>

<!-- Mobile Menu -->
<div id="mobile-menu" class="hidden fixed inset-0 bg-background/95 z-50 md:hidden">
    <div class="flex justify-end p-6">
        <button id="close-menu-button" class="text-primary-text">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>
    <div class="flex flex-col items-center justify-center h-full space-y-8 text-2xl">
        <a href="#about" class="mobile-nav-link text-secondary-text hover:text-primary-text transition">Sobre mí</a>
        <a href="#experience" class="mobile-nav-link text-secondary-text hover:text-primary-text transition">Experiencia</a>
        <a href="#skills" class="mobile-nav-link text-secondary-text hover:text-primary-text transition">Habilidades</a>
        <a href="#contact" class="mobile-nav-link text-secondary-text hover:text-primary-text transition">Contacto</a>
        <a href="https://drive.google.com/file/d/1tq30qS_kZhwjL5BKE08oAJ8jn448Plho/view?usp=sharing" target="_blank" rel="noopener noreferrer" class="mt-8 inline-block bg-accent hover:bg-opacity-80 text-primary-text font-semibold px-8 py-4 rounded-lg transition">
            Descargar CV
        </a>
    </div>
</div>
