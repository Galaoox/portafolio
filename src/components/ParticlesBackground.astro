---
// Particles background component
---

<div id="particles-js" class="fixed inset-0 pointer-events-none z-0"></div>

<script>
	// Initialize particles when the DOM is loaded
	document.addEventListener('DOMContentLoaded', function() {
		// Load particles configuration
		particlesJS.load('particles-js', '/particles-config.json', function() {
			console.log('Particles.js config loaded');
		});
		
		// Ensure interactivity is working
		setTimeout(() => {
			if (window.pJSDom && window.pJSDom[0]) {
				console.log('Particles interactivity enabled');
			}
		}, 1000);
	});
</script>

<style>
	#particles-js {
		width: 100%;
		height: 100%;
		background-color: transparent;
	}
</style>
